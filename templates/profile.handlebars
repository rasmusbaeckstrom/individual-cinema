<script src="https://cdn.tailwindcss.com"></script>

<div class="container mx-auto">
  <form class="signupForm max-w-md mx-auto p-6 bg-white rounded-xl shadow-xl">
    <h2 class="text-center text-xl font-bold mb-4">Profile information</h2>
    <div class="mb-4">
      <label for="username" class="block text-sm font-semibold">Username:</label>
      <input type="text" id="username" value="Show username here" readonly
        class="w-full px-3 py-2 border rounded-md bg-gray-100 focus:outline-none focus:ring focus:border-blue-300" />
    </div>
    <div class="mb-4">
      <label for="email" class="block text-sm font-semibold">E-mail:</label>
      <input type="email" id="email" value="Show e-mail here" readonly
        class="w-full px-3 py-2 border rounded-md bg-gray-100 focus:outline-none focus:ring focus:border-blue-300" />
    </div>
    <div class="mb-4">
      <label for="firstname" class="block text-sm font-semibold">Firstname:</label>
      <input type="text" id="firstname" value="Show firstname here" readonly
        class="w-full px-3 py-2 border rounded-md bg-gray-100 focus:outline-none focus:ring focus:border-blue-300" />
    </div>
    <div class="mb-4">
      <label for="lastname" class="block text-sm font-semibold">Lastname:</label>
      <input type="text" id="lastname" value="Show lastname here" readonly
        class="w-full px-3 py-2 border rounded-md bg-gray-100 focus:outline-none focus:ring focus:border-blue-300" />
    </div>
    <div class="mb-4">
      <button type="submit" class="w-full bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
        Change password
      </button>
    </div>
    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      Log out
    </button>
  </form>
</div>